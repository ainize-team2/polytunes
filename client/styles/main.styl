body {
  background:  #3A3A3A;
  font-family: 'Montserrat';
  text-align: center;
  margin: 0;
  color: white;
  width: 100%;
  min-height: 100%;
  
}

* {
  font-family: Montserrat;
}

p {
  line-height: 1.2em;
  margin: 10px 0;
}

.layout {
  min-height: 100%;
  width: 100%;
}

.main {
  max-width: 1140px;
  margin: 0 auto 109px;
  display: block;
  padding: 0 50px;
}

.bottom {
  color: white;
  opacity .5;
}

.links {
  font-size: 1.5em;
}

.brand-title {
  font-family: 'Roboto-Light';
  font-size: 1.2em;
  font-weight: normal;
  text-align center;
  margin: 10px auto;
}

.controls {
  text-align: left;
  margin: auto;
  width: 100%;
}

.player-list {
  display: flex;
  margin-bottom: 7px;
}

.player-list {
  display: flex;
  margin-bottom: 7px;
}

h1 {
  font-size: 2em;
  margin: 30px;
  line-height 1.3em
}

.centered {
  left: 50%;
  position absolute
  top 50%
  transform translate(-50%, -50%)
  width: 100%;

  h1 {
    margin-top 0
  }
}

.player {
  box-sizing: border-box;
  border-radius: 1px;
  color: white;
  display: inline-block;
  flex-basis: 0;
  flex-grow: 1;
  margin: 0 3.5px;
  max-height: 25px
  overflow: hidden;
  padding: 5px 8px;
  text-align: center;
  opacity: 0.75;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.player:first-child {
  margin-left: 7px;
}

.player:last-child {
  margin-right: 7px;
}

#play {
  background-color: gray;
  border: 1px solid gray;
  border-radius: 1px;
  color: white;
  cursor: pointer;
  font-family: inherit;
  font-size: 10px;
  margin-left: 7px;
  height: 25px;
  padding: 6px;
  width: 25px;
}

#play:focus {
  outline: 0;
}

#add-room {
  border-radius: 2px;
  background-color: #607D8B;
  border: 0px;
  padding: 12px;
  color: white;
}

#play:hover, #add-room:hover {
  opacity: 0.8;
}

.center {
  text-align:  center;
}

h1 {
  font-size: 64px;
  line-height: 80px;
}

a, .pointer {
  color: white;
  text-decoration: none;
  cursor: pointer;
  color:  rgb(200,200,200);
}

a:hover, .pointer:hover {
  color:  rgb(250,250,250);
}

h2 {
  margin: 0 0 5px 0;
  font-size: 1.25em;
  padding:  0 0 5px 0;
  border-bottom:  1px solid rgb(100,100,100);
  // font-size: 36px;
  // line-height: 50px;
}

h4 {
  font-size: 16px;
  line-height: 28px;
}

// Player colours
&.player_0 {
  background-color: #F44336;
}
&.player_1 {
  background-color: #009688;
}

.hidden {
  display: none;
}

input,
button,
.btn {
  box-sizing border-box
  display block
  color white

  &.btn-large {
    max-width: 300px;
  }

  &.btn-inline {
    display: inline;
  }

}

.btn {
  font-family 'Montserrat'
  background-color: #1A1B1F;
  height: 64px;
  min-width: 265px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
  border-radius: 32px;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  margin-right: 24px;
  font-size: 16px;
  line-height: 24px;
}

.btn:last-of-type {
  margin: 0;
}

.btn img:last-of-type {
  margin-right: 8px;
}

label {
  width: 150px;
  cursor:  pointer;
}

.notFound {
  margin-top: 196px;
}

.loading {
  margin-top: 35vh;
}

.loading i {
  opacity: 0.5;
}

.loading p {
  font-size: 16px;
  line-height: 28px;
  color: #FFFFFF;
  opacity: 0.6;
}

@media screen and (max-width: 945px) {
  .controls {
    width: 100%;
  }
  .main {
    padding: 0 28px;
  }

  h1 {
    font-size: 56px;
    line-height: 70px;
  }

  h2 {
    font-size: 32px;
    line-height: 44px;
  }

  h4 {
    font-size: 16px;
    line-height: 28px;
  }
}

@media screen and (max-width: 460px) {
  .main {
    margin-bottom: 80px;
  }

  h1 {
    font-size: 40px;
    line-height: 56px;
  }

  h2 {
    font-size: 30px;
    line-height: 40px;
  }

  h4 {
    font-size: 14px;
    line-height: 26px;
  }
}