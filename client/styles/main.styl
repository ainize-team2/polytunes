body {
  background:  #3A3A3A;
  font-family: 'Montserrat';
  text-align: center;
  margin: 0;
  color: white;
  width: 100%;
}

* {
  font-family: Montserrat;
}

.main {
  max-width: 1140px;
  margin: 0 auto 109px;
  display: block;
  padding: 90px 50px 0;

  &.home {
    padding-top: 0;
  }
}

.live.container {
  font-size: 16px;
  line-height: 28px;
  color: #AD87FF;
}

.bottom {
  color: white;
  opacity .5;
}

.links {
  font-size: 1.5em;
}

.brand-title {
  font-family: 'Roboto-Light';
  font-size: 1.2em;
  font-weight: normal;
  text-align center;
  margin: 10px auto;
}

.controls {
  text-align: left;
  margin: auto auto auto 80px;
  max-width: 340px;

  div:first-of-type {
    display: flex;
    align-items: center;
    color: #AD87FF;
    font-weight: bold;
    font-size: 16px;
    line-height: 28px;
    margin-bottom: 30px;

    svg {
      margin-right: 10px;
    }
  }

  h3 {
    margin-bottom: 10px;
  }

  p {
    font-size: 16px;
    line-height: 28px;
    margin-bottom: 40px;
  }

  .share {
    left: -12px;
    position: relative;
    width: fit-content !important;

    button {
      // width: 32px;
      // height: 32px;
      // margin-right: 32px;
    }

    button:last-child {
      margin-right: 0;
    }
  }

  .eq-bar {
    fill: #AD87FF;
    transform: scale(1, -1) translate(0, -24px);
  }

  .eq-bar--1 {
    animation-name: short-eq;
    animation-duration: 0.7s;
    animation-iteration-count: infinite;
    animation-delay: 0s;
  }

  .eq-bar--2 {
    animation-name: tall-eq;
    animation-duration: 0.7s;
    animation-iteration-count: infinite;
    animation-delay: 0.17s;
  }

  .eq-bar--3 {
    animation-name: short-eq;
    animation-duration: 0.7s;
    animation-iteration-count: infinite;
    animation-delay: 0.34s;
  }

  .eq-bar--4 {
    animation-name: tall-eq;
    animation-duration: 0.7s;
    animation-iteration-count: infinite;
    animation-delay: 0.1s;
  }

  @keyframes short-eq {
    0% {
      height: 8px
    }

    50% {
      height: 4px
    }

    100% {
      height: 8px
    }
  }

  @keyframes tall-eq {
    0% {
      height: 16px
    }

    50% {
      height: 6px
    }

    100% {
      height: 16px
    }
  }
}

.player-names {
  display: flex;
  margin-bottom: 4px;
}

.player-colors {
  display: flex;
  width: 100%;
  margin-top: 3px;
}

