.player {
  box-sizing: border-box;
  border-radius: 1px;
  color: white;
  display: inline-block;
  flex-basis: 0;
  flex-grow: 1;
  //margin: 0 2.5px;
  // max-height: 25px
  overflow: hidden;
  // padding: 5px 8px;
  text-align: center;
  opacity: 0.75;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

  img {
    width: 20px;
    height: 20px;
  }
  div:first-child {
    margin-bottom: 5px;
    display: flex;
  }
}

.player:first-child {
  margin-left: 5px;

  img {
    margin-right: 10px;
  }
  div:first-child {
    justify-content: flex-start;
  }
}

.player:last-child {
  margin-right: 5px;

  img {
    margin-left: 10px;
  }
  div:first-child {
    justify-content: flex-end;
  }
}

.player-color {
  box-sizing: border-box;
  display: inline-block;
  flex-basis: 0;
  flex-grow: 1;
  // margin: 0 2.5px 0 5px;
  height: 4px;
  overflow: hidden;
}

#play {
  background: #1A1B1F;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
  border-radius: 32px;
  color: white;
  cursor: pointer;
  font-family: inherit;
  font-size: 16px;
  height: 64px;
  padding: 22px 24px;
  border: none;
  margin-bottom: 33px;
  outline:0;

  i {
    margin-right: 12px;
    width: 20px;
    height: 20px;
  }
}

#add-room {
  border-radius: 2px;
  background-color: #607D8B;
  border: 0px;
  padding: 12px;
  color: white;
}

#play:hover, #add-room:hover {
  opacity: 0.8;
}

.center {
  text-align:  center;
}

h1 {
  font-size: 64px;
  line-height: 80px;
}

h2 {
  font-size: 36px;
  line-height: 50px;
}

h3 {
  font-size: 24px;
  line-height: 36px;
}

h4 {
  font-size: 16px;
  line-height: 28px;
}

a, .pointer {
  color: white;
  text-decoration: none;
  cursor: pointer;
  color:  rgb(200,200,200);
}

a:hover, .pointer:hover {
  color:  rgb(250,250,250);
}

.player-color {
  height: 4px;
  width: 100%;
  display: flex
}

.player-color:first-child {
  margin-left: 5px;
}

.player-color:last-child {
  margin-right: 5px;
}

.player_0,
.player_0.player-color {
  margin-right: 2.5px;
}

&.player_1,
.player_1.player-color {
  margin-left: 2.5px;
}

.hidden {
  display: none;
}

input,
button,
.btn {
  box-sizing border-box
  display block
  color white

  &.btn-large {
    max-width: 300px;
  }

  &.btn-inline {
    display: inline;
  }

}

.btn {
  font-family 'Montserrat'
  background-color: #1A1B1F;
  height: 64px;
  min-width: 265px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
  border-radius: 32px;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  margin-right: 24px;
  font-size: 16px;
  line-height: 24px;
}

.btn:last-of-type {
  margin: 0;
}

.btn img:last-of-type {
  margin-right: 8px;
}

label {
  width: 150px;
  cursor:  pointer;
}

.notFound {
  margin-top: 196px;
}

.loading {
  margin-top: 35vh;
}

.loading i {
  opacity: 0.5;
}

.loading p {
  font-size: 16px;
  line-height: 28px;
  color: #FFFFFF;
  opacity: 0.6;
}

.waiting {
  h2 {
    margin: 20px;
  }

  h2.title {
    margin-bottom: 37px;
  }

  p {
    font-size: 16px;
    line-height: 28px;
    margin: 10px 0;
    max-width 700px;
    margin-bottom: 40px;
  }
}

.waiting_icon {
  height: 40px;
  margin-bottom: 20px;
  img {
    height: 40px;
    width: 40px;
  }
  :first-child {
    margin-right: 10px;
  }
  @keyframes blink {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.2;
    }
    100% {
      opacity: 0.99;
    }
  }
  :last-child  {
    animation: blink 2s linear 2s infinite;
    -webkit-animation: blink 2s linear 2s infinite;
  }
}

.room.play,
.room.watch,
.solo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.room.play .container,
.room.watch .container,
.solo .container {
  display: flex;
  flex-direction: row;
  height: fit-content;
}

.share {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 30px;
  button {
    border: none;
    background: none;
    &:focus {
      outline:0;
    }
    &:hover {
      cursor: pointer;
    }
  }
}

#shareUrl {
  font-weight: normal;
  font-size: 24px;
  line-height: 36px;
  border: none;
  border-bottom: 1px solid white;
  background-color: transparent;
  padding-bottom: 10px;
  margin-bottom: 40px;
  width: 554px;
  color: #9997ce;
  max-width: none;
}

.loading p {
  margin: auto;
}

@media screen and (max-width: 1088px) {
  .room.play,
  .room.watch,
  .solo {
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .room.play .container,
  .room.watch .container,
  .solo .container {
    flex-direction: column;
    align-items: center;
  }

  .controls {
    display: flex;
    align-items: center;
    flex-direction: column;
    text-align: center;
    margin: auto;
    padding-top: 28px;
    width: 500px;

    p {
      width: 500px;
    }

    .share {
      left: 0;
      width: fit-content !important;

      button:last-child {
        margin-right: 0;
      }
    }
  }
}

@media screen and (max-width: 945px) {
  .controls {
    width: 100%;
  }
  .main {
    // margin: 0 auto 109px;
    padding: 40px 28px 0;
  }

  h1 {
    font-size: 56px;
    line-height: 70px;
  }

  h2 {
    font-size: 32px;
    line-height: 44px;
  }

  h4 {
    font-size: 16px;
    line-height: 28px;
  }
}

@media screen and (max-width: 460px) {
  .main {
    margin-bottom: 80px;
  }

  h1 {
    font-size: 40px;
    line-height: 56px;
  }

  h2 {
    font-size: 30px;
    line-height: 40px;
  }

  h4 {
    font-size: 14px;
    line-height: 26px;
  }
}