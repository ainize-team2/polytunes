.board-container {
  display: flex;
  flex-direction: column;
  width: 485px;
}

table {
  height: 485px;
  border-collapse: separate;
  border-spacing: 5px;
  cursor: default;

  td {
    border-radius: 1px
    border-spacing: 0;
    opacity: .1;
    padding: 0;

    &.around {
      opacity: 0.3;
    }

    &.active {
      opacity:  0.5;
    }

    &.playing {
      opacity:  1;
      transition-property: opacity;
      transition-duration: .25s;
    }

    &.delay {
      transition-property: opacity;
      transition-delay: .25s;
    }
  }
}

table {
  cursor: pointer;

  td:hover {
    opacity: 0.1;

    &.active:hover {
      opacity: 0.4;
    }

    &.playing:hover {
      opacity: 1;
    }
  }
}

.player-names {
  width: 100%;
}

