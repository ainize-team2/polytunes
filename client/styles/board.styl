.board-container {
  display: flex;
  flex-direction: column;
  width: 485px;
}

table {
  display: flex;
  height: 485px;
  border-collapse: separate;
  border-spacing: 5px;
  cursor: pointer;
  justify-content: center;
  align-items: center;

  tbody {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  tr {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 2.5px 0;
    width: 100%;
    height: 100%;
  }

  td {
    display: flex;
    margin: 0 2.5px;
    border-radius: 1px
    border-spacing: 0;
    opacity: .1;
    padding: 0;
    max-width: 25px;
    max-height: 25px;
    width: calc((100% - 90px) / 16);
    height: 100%;

    &.around {
      opacity: 0.3;
    }

    &.active {
      opacity:  0.5;
    }

    &.playing {
      opacity:  1;
      transition-property: opacity;
      transition-duration: .25s;
    }

    &.delay {
      transition-property: opacity;
      transition-delay: .25s;
    }
  }

  td:hover {
    opacity: 0.1;

    &.active:hover {
      opacity: 0.4;
    }

    &.playing:hover {
      opacity: 1;
    }
  }

  td:after{
    content: '';
    display: block;
    margin-top: 100%;
  }
}

