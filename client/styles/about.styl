.about-page {
  font-family: "Montserrat";
  padding: 0 50px 0 50px;
  h1 {
    margin-top: 20px;
    margin-bottom: 15px;
    font-weight: 400;
  }

  h2 {
    font-weight: 400;
    margin: 0 0 10px 0;
    padding: 0;
    border: none;
  }

  h3 {
    margin-top: 10px;
    margin-bottom: 10px;
    font-weight: 500;
  }

  h4 {
    font-weight: 400;
    opacity: 0.6;
    margin: 0;
    color: #1A1B1F;
  }

  button {
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    margin: 50px auto 70px;
    width: 190px;
    height: 64px;
    background-color: #1a1b1f !important;
    color: white;
    font-size: 16px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
    border: none;
    border-radius: 32px;
    &:hover {
      background-color: #854cff !important;
    }
    &:active {
      background-color: #6535cc !important;
      outline: none;
    }
    &:focus {
      outline: none;
    }
    img {
      margin-right: 12px;
    }
  }

  p {
    font-size: 16px;
    line-height: 28px;
    opacity: 0.6;
  }

  a {
    color: white;
  }
  
  .container {
    text-align: center;
    margin: 0px;
    max-width: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .about_hero {
    .container {
      background-image: url("../images/about-hero.svg");
      background-size: cover;
      background-position-x: center;
      background-position-y: bottom;
      padding: 90px 120px 0px 120px;
    }
    h1 {
      color:#1A1B1F;
      margin: 20px 60px;
      font-weight: normal;
    }
    .quote {
      background: linear-gradient(rgba(58, 58, 58, 0.8) 0%, #3A3A3A 100%);
      backdrop-filter: blur(50px);
      padding: 60px 130px 44px 130px;
      border-radius: 60px 60px 0px 0px;
      h3 {
        font-size: 24px;
        font-weight: 300;
        line-height: 38px;
        margin: 0 0 16px 0;
        color: #9997CE;
      }
      h4 {
        color: #AD87FF;
      }
      p:first-of-type {
        font-weight: 600;
      }
    }
    .content {
      max-width: 900px;
      margin-bottom: -0.5px;
    }
  }
  .about {
    a {
      text-decoration: none;
      font-weight: 700;
      cursor: pointer;
      letter-spacing: 0;
    }
    .container {
      text-align: center;
      padding: 160px 120px 120px;
      h2 {
        margin-bottom: 20px;
      }
    }
  }
} 

.about.section {
  h4 {
    color: #ffffff;
  }
}

.ainize {
  .container {
    background: #44444D;
    border-radius: 60px;
    padding: 120px;
  }
  .content {
    max-width: 900px;
    display: flex;
    flex-direction: column;
    align-items: center;
    div {
      display: flex;
      flex-direction: row;
    }
  }
  button {
    cursor: pointer;
    margin: 40px 0 0;
    width: 224px;
    height: 60px;
    background-color: #1a1b1f !important;
    color: white;
    font-size: 16px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
    border: none;
    border-radius: 32px;
    &:hover {
      background-color: #854cff !important;
    }
    &:active {
      background-color: #6535cc !important;
      outline: none;
    }
    &:focus {
      outline: none;
    }
  }
  button:last-of-type {
    width: 80px;
    height: 64px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20px;
    img {
      margin: 0;
    }
  }
  h4 {
    color: #ffffff;
  }
}

@media screen and (max-width: 1088px) {
  .about-page .about_hero .container {
    padding: 80px 50px 0px 50px;
  }
}

@media screen and (max-width: 948px) {
  .about-page {
    .about_hero .quote h3 {
    }
  }
}

@media screen and (max-width: 663px) {
  .about-page {
    .about_hero .container {
      padding: 50px 20px 0px 20px;
    }
    .about .container {
      padding: 60px 20px 60px 20px;
    }
    .about_hero .quote h3 {
    }
    .about_hero .quote img {
      height: 40px;
      width: 40px;
    }
    .about-page button {
      width: 130px;
      height: 35px;
      font-size: 9px;
      &:focus {
        outline: none;
      }
    }
    .ainize .container {
      padding: 60px;
    }
  }
}

@media screen and (max-width: 487px) {
  .about-page .about_hero h1 {
  }
}

@media screen and (max-width: 460px) {
  .about-page {
    .about_hero .container {
      padding: 40px 20px 0px 20px;
    }
    .about_hero .quote h3 {
    }
    .about_hero .quote {
      padding: 40px 55px 30px 55px;
    }
    .about .container,
    .ainize .container {
      padding: 40px;
    }
  }
}
