.about-page {
  font-family: "Montserrat-Medium";
  padding: 0 50px 0 50px;
  h1 {
    margin-top: 20px;
    margin-bottom: 15px;
    font-size: 64px;
    line-height: 80px;
    font-weight: 400;
  }

  h2 {
    font-size: 36px;
    line-height: 50px;
    font-weight: 400;
    margin: 0 0 10px 0;
    padding: 0;
    border: none;
  }

  h3 {
    margin-top: 10px;
    margin-bottom: 10px;
    font-size: 20px;
    line-height: 34px;
    font-weight: 500;
  }

  h4 {
    font-size: 16px;
    line-height: 28px;
    font-weight: 400;
    opacity: 0.6;
    margin: 0;
  }

  p {
    margin-bottom: 10px;
  }

  a {
    color: white;
  }
  
  .container{
    text-align: center;
    margin: 0px;
    max-width: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .about_hero {
    .container {
      background-image: url("../images/about-hero.svg");
      background-size: cover;
      background-position-x: center;
      background-position-y: bottom;
      padding: 90px 120px 0px 120px;
      border-radius: 0px 60px 60px 60px;
    }
    h1 {
      color:#1A1B1F;
      margin: 20px 60px;
      font-weight: normal;
    }
    h4 {
      margin-bottom: 40px;
      color: #1A1B1F;
    }
    .quote {
      background: linear-gradient(rgba(58, 58, 58, 0.8) 0%, #3A3A3A 100%);
      padding: 80px 170px 0px 170px;
      border-radius: 60px 60px 0px 0px;
      h3 {
        font-size: 24px;
        font-weight: 500;
        line-height: 38px;
        margin: 0;
        color: #6c6aa4;
      }
      h4 {
        color: white;
      }
      img {
        height: 60px;
        width: 60px;
        object-fit: cover;
        border-radius: 30px;
      }
    }
    .content {
      max-width: 900px;
      margin-bottom: -0.5px;
    }
  }
  .about {
    a {
      text-decoration: none;
      font-weight: 700;
      cursor: pointer;
      letter-spacing: 0;
    }
    .container {
      text-align: center;
      padding: 90px 120px 0px 120px;
      &:last-child {
        padding: 90px 120px 90px 120px;
      }
      h2 {
        margin-bottom: 20px;
      }
    }
  }
} 




.ainize {
  .container {
    background: #44444D;
    border-radius: 60px;
    padding: 120px;
  }
  .content {
    max-width: 900px;
  }
  button {
    cursor: pointer;
    margin-top: 40px;
    width: 200px;
    height: 60px;
    background-color: #1a1b1f !important;
    color: white;
    font-size: 16px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
    border: none;
    border-radius: 32px;
    &:hover {
      background-color: #854cff !important;
    }
    &:active {
      background-color: #6535cc !important;
    }
  }
}

@media screen and (max-width: 1088px) {
  .about_hero .container {
    padding: 80px 50px 0px 50px;
  }
}

@media screen and (max-width: 948px) {
  .about_hero .quote {
    padding: 80px 100px 0px 100px;
  }
  .about_hero .quote h3 {
    font-size: 22px;
    line-height: 30px;
  }
}

@media screen and (max-width: 663px) {
  .about_hero .container {
    padding: 50px 20px 0px 20px;
  }
  .about .container {
    padding: 60px 20px 60px 20px;
  }
  .about .container:last-child {
    padding: 0px 20px 60px 20px;
  }
  .about_hero .quote {
    padding: 40px 80px 0px 80px;
  }
  .about_hero .quote h3 {
    font-size: 16px;
    line-height: 25px;
  }
  .about_hero .quote img {
    height: 40px;
    width: 40px;
  }
  .ainize button {
    width: 130px;
    height: 35px;
    font-size: 9px;
  }
  .ainize .container {
    padding: 60px;
  }
}

@media screen and (max-width: 487px) {
  .about_hero h1 {
    font-size: 25px;
    line-height: 35px;
  }
}

@media screen and (max-width: 460px) {
  .about_hero .container {
    padding: 40px 20px 0px 20px;
  }
  .about_hero .quote h3 {
    font-size: 12px;
    line-height: 20px;
  }
  .about_hero .quote {
    padding: 40px 55px 0px 55px;
  }
  .ainize .container {
    padding: 40px;
  }
}
