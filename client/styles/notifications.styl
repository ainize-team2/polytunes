.notifications {
  bottom: 5px;
  right: 5px;
  position: absolute;
  text-align: right;
  z-index: 1000;

  .notification {
    padding-bottom: 5px;
  }
}

.popup {
  position: absolute;
  display: none;
  background: none;
  background-color: #352528;
  opacity: 0.9;
  border-radius: 20px;
  justify-content: center;
  align-items: center;
  font-style: normal;
  font-weight: normal;
  font-size: 16px;
  line-height: 28px;
  top: 50%;
  left: 50%;
  transform: translate(-120%, -50%);
  //margin-top: 370px;
  //margin-left: -360px;
  padding: 58px 50px;

  div {
    width: 200px;
    color: #FF6969;
  }
}

#toast-container {
  width: 200px;
  
  .toast {
    width: 100%;
  }
}

